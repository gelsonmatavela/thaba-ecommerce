<h1 class="categorieTitle">Explore Categorias</h1>

<div class="row">
    <% if(typeof categories !== 'undefined' && categories.length>0 ) {%>
        <%categories.forEach(function(category, index){%>
            <a href="/categories/<%-category.nome%>" class="col2 category_link">
                <div class="category_img">
                    <img src="/img/<%-category.imagem%>" alt="<%-category.imagem%>" loading="lazy" />
                </div>
                <div class="pt-1">
                    <p><%-category.nome%></p>
                </div>
            </a>
            <%})%>
    <% } %>
</div>

<div class="row2">

    <% if(typeof categoryById !== 'undefined' && categoryById.length>0 ) {%>
        <% categoryById.forEach(function(artigos, index){ %>

    <a href="/artigo/<%= artigos.id%>" class="col category_link">
        <div class="category_img category_img--large">
            <img src="/uploads/<%= artigos.imagem%>" alt="<%= artigos.nome%>" loading="lazy" />
        </div>
        <div class="pt-1">
            <%= artigos.marca%>
        </div>
        <p><%= artigos.preco%>MZN</p>
    </a>
    <%})%>
    <%}%>

</div>
































<style>
    .row{
        padding: 0 10%;
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 20px;
        padding-top: 4px;
        text-align: center;
    }
    .categorieTitle{
        padding-bottom: 4px;
        gap: 20px;
        margin-left: 120px;
    }
    
    .row{
        margin: 10px 0;
        gap: 20px;
        row-gap: 3px;
        margin-bottom: 4px;
    }
</style>
